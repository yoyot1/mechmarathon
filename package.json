{
  "name": "mechmarathon",
  "private": true,
  "version": "0.1.0",
  "description": "A web-based real-time multiplayer game based on RoboRally",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:client": "pnpm --filter @mechmarathon/client dev",
    "dev:server": "pnpm --filter @mechmarathon/server dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4"
}
